@model IEnumerable<HrProject.BL.Model.BankVM>
@{
    ViewData["Title"] = "البنوك";
}

<style>
    th {
        text-align: center;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">البنوك</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">شئون الموظفين</a></li>
                        <li class="breadcrumb-item active">الاكواد العامة</li>
                        <li class="breadcrumb-item active">البنوك</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <a asp-controller="Bank" asp-action="Create" class="btn btn-primary"> اضف بنك</a>

    <table class="table table-striped table-hover text-center table-bordered font-weight-bold table-sm">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name Arabic</th>
                <th>Name English</th>
                <th>Name Details</th>
                <th>Name Update</th>
                <th>Name Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.NameArbic</td>
                    <td>@item.NameEnglish</td>
                    <td>@item.Notes</td>
                    <td><a asp-controller="#" asp-action="#" asp-route-id="@item.Id" class="btn btn-primary">Details</a></td>
                    <td><a asp-controller="Bank" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Update</a></td>
                    <td><a asp-controller="Bank" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>



